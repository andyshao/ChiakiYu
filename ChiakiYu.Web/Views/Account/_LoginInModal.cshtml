@model LoginViewModel

<div style="width:400px;height:250px;">
    <div class="panel-body">
        <form action="@Url.Action(MVC.Account.Login())" method="post" role="form">
            @*@Html.AntiForgeryToken()*@
            @Html.HiddenFor(n => n.ReturnUrl)
            <fieldset>
                <div class="form-group">
                    <input type="text" name="UserName" autofocus="" required placeholder="用户名/邮箱/手机号" class="form-control">

                </div>
                <div class="form-group">
                    <input type="password" name="PassWord" required placeholder="密码" class="form-control">
                </div>

                <div class="form-group">
                    <label>
                        <input type="checkbox" value="true" name="RememberMe"> 记住密码
                    </label>
                </div>
                <button type="submit" class="btn btn-lg btn-success btn-block">登录</button>
            </fieldset>

        </form>
    </div>
</div>
