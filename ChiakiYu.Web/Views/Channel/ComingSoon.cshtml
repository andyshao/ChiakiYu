@{
    ViewBag.ActiveMenu = "更多";
    ViewBag.Title = "ComingSoon";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var comingDateTime = DateTime.Parse("2016-01-01 00:00:00");
    var time = comingDateTime.Subtract(DateTime.Now);
}


@*<div class="logo-image">
        <a href="@Url.Action(MVC.Channel.Home())"><img class="img-responsive" src="/Images/logo.png" alt=""> </a>
    </div>*@

<section id="coming-soon">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <div class="text-center coming-content">
                    <h1>UNDER CONSTRUCTION</h1>
                    <p>
                        We have been spending long hours in order to launch our new website.
                        We will offer freebies, a brand new blog and featured content of our latest work. Join our mailing list or follow us on<br/> Facebook or Twitter to stay up to date.
                    </p>
                    @time
                    @*<div class="social-link">
                            <span><a href="#"><i class="fa fa-facebook"></i></a></span>
                            <span><a href="#"><i class="fa fa-twitter"></i></a></span>
                            <span><a href="#"><i class="fa fa-google-plus"></i></a></span>
                        </div>*@
                </div>
            </div>
            <div class="col-sm-12">
                <div class="time-count">
                    <ul id="countdown">
                        <li class="angle-one">
                            <span class="days time-font" id="day">00</span>
                            <p>天</p>
                        </li>
                        <li class="angle-two">
                            <span class="hours time-font" id="hour">00</span>
                            <p>小时</p>
                        </li>
                        <li class="angle-three">
                            <span class="minutes time-font" id="minute">00</span>
                            <p class="minute">分钟</p>
                        </li>
                        <li class="angle-four">
                            <span class="seconds time-font" id="seconds">00</span>
                            <p>秒</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts {
    <script>
        $(function () {
            setTime();
        });

        function setTime() {
            var timeStart = new Date().getTime(); //设定当前时间
            var timeEnd = new Date("2016/01/01 00:00:00").getTime(); //设定目标时间
            var timeDistance = timeEnd - timeStart;
            var day = Math.floor(timeDistance / 86400000);
            timeDistance -= day * 86400000;
            var hour = Math.floor(timeDistance / 3600000);
            timeDistance -= hour * 3600000;
            var minute = Math.floor(timeDistance / 60000);
            timeDistance -= minute * 60000;
            var second = Math.floor(timeDistance / 1000);
           
            $("#day").html(day);
            $("#hour").html(hour);
            $("#minute").html(minute);
            $("#seconds").html(second);
            setTimeout("setTime()", 1000);
        }
    </script>
}
