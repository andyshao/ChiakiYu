@{
    var siteSetting = DependencyResolver.Current.GetService<ISettingService<SiteSetting>>().Get() ?? new SiteSetting();

    string activeMenu = ViewBag.ActiveMenu;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="@(siteSetting.MetaDescription)">
    <meta name="keywords" content="@(siteSetting.MetaKeyWords)" />
    <meta name="generator" content="@(siteSetting.MetaGenerator)" />
    <meta name="author" content="@(siteSetting.MetaAuthor)">
    <link rel="shortcut icon" href="~/favicon.ico">
    <title>@ViewBag.Title - @(siteSetting.SiteName)</title>

    @Styles.Render("~/bundles/css", "~/Content/font-awesome/css/css", "~/Scripts/fancybox/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/jquery")

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="@Url.Content("~/Scripts/html5shiv.js")"></script>
        <script src="@Url.Content("~/Scripts/respond.min.js")"></script>
    <![endif]-->



</head><!--/head-->
<body>
    @Html.Action(MVC.Channel._Header(activeMenu))
    @RenderBody()
    <footer id="footer">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="copyright-text text-center">
                        <p>&copy; ChiakiYu 2014-@(DateTime.Now.Year). 版权所有.</p>
                        @*<p>
                            Designed by <a target="_blank" href="#">ChiakiYu</a>
                        </p>*@
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @Html.ShareToThird(ShareDisplayType.Sidebar)
    <!--/#footer-->
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>

