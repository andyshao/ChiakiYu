@model Blog
@{
    ViewBag.ActiveMenu = "日志";
    ViewBag.Title = "日志详情";
    Layout = MVC.Shared.Views._Layout;
}

<section id="page-breadcrumb">
    <div class="vertical-center sun">
        <div class="container">
            <div class="row">
                <div class="action">
                    <div class="col-sm-12">
                        <h1 class="title">日志</h1>
                        <p>畅游在书的海洋中...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/#page-breadcrumb-->
<section id="blog-details" class="padding-top">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-sm-7">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="single-blog blog-details two-column">
                            @if (!string.IsNullOrEmpty(Model.FeaturedImage))
                            {
                                <div class="post-thumb">
                                    <a href="@Model.FeaturedImage" data-title="@Model.Title" data-lightbox="blogimg">
                                        <img src="@Model.FeaturedImage" class="img-responsive" alt="">
                                    </a>
                                </div>
                            }
                            <div class="post-content overflow">
                                <h2 class="post-title bold">
                                    <span>@Model.Title</span>
                                </h2>
                                <span class="post-author">
                                    <a href="#">@Model.Author.NickName</a>
                                </span>
                                <span>发表于 @Model.CreatedTime.ToString("yyyy-MM-dd HH:mm")</span>&nbsp;&nbsp;
                                <span title="评论数"><i class="fa fa-comments"></i> @Model.CommentCount</span>&nbsp;&nbsp;
                                <span title="浏览数"><i class="fa fa-eye"></i> @Model.HitCount</span>
                                <div class="btn-group padding-left">
                                    <button class="btn btn-success btn-xs dropdown-toggle" data-toggle="dropdown" type="button">
                                        操作
                                        <span class="caret"></span>
                                    </button>
                                    <ul role="menu" class="dropdown-menu" style="min-width: 80px; left: auto; right: 0;">
                                        <li><a href="@Url.Action(MVC.Blog.Blog.Edit(Model.Id))">编辑</a></li>
                                        <li><a href="#">删除</a></li>
                                        <li><a href="#">置顶</a></li>
                                    </ul>
                                </div>
                                @Html.Raw(Model.Content)
                                @*<div class="blog-share">
                                        <span class='st_facebook_hcount'></span>
                                        <span class='st_twitter_hcount'></span>
                                        <span class='st_linkedin_hcount'></span>
                                        <span class='st_pinterest_hcount'></span>
                                        <span class='st_email_hcount'></span>
                                    </div>
                                    <div class="author-profile padding">
                                        <div class="row">
                                            <div class="col-sm-2">
                                                <img src="/Images/avatar_default.jpg" alt="">
                                            </div>
                                            <div class="col-sm-10">
                                                <h3>Q</h3>
                                                <p>来来来来来来来来来来来来来来来来来来来来来来来来来来来来来来</p>
                                                <p>来来来来来来来来来来来来来来来来来来来来来来来来来来来来来来</p>
                                                <p>来来来来来来来来来来来来来来来来来来来来来来来来来来来来来来</p>
                                            </div>
                                        </div>
                                    </div>*@
                                @Html.Action(MVC.Blog.Blog._CommentList(1))
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-5">
                @Html.Partial("_Sidebar")
            </div>
        </div>
    </div>
</section>
